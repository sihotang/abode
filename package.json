  },
  "homepage": "https://github.com/sihotang/dotfiles#readme",
  "dependencies": {
    "camelcase": "^5.0.0",
    "chalk": "^2.4.1",
    "mri": "^1.1.1",
    "mustache": "^2.3.0",
    "require-dir": "^1.0.0",
    "shelljs": "^0.8.2",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.4",
    "@types/mri": "^1.1.0",
    "@types/mustache": "^0.8.31",
    "@types/node": "^10.5.2",
    "@types/require-dir": "^0.3.0",
    "@types/shelljs": "^0.8.0",
    "@types/yargs": "^11.1.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "pkg": "^4.3.3",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.9.2"
  }
